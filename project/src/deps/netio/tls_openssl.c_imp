#include <fcntl.h>
int set_sock_block_mode(int fd)
{
	////////////////////////////////////
    // 소켓을 블로킹 모드로 설정
    int flags = fcntl(fd, F_GETFL, 0);
    if (flags == -1){
        ERR("fcntl 1");
		return -1;
	}

    if (fcntl(fd, F_SETFL, flags & ~O_NONBLOCK) == -1) {
        ERR("fcntl 2");
		return -1;
	}

	return 0;
}
