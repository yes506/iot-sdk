int net_tls_release(tls_channel_tPtr tls_ctx)
{
  if ( tls_ctx->g_ssl != NULL ) {
    SSL_free(tls_ctx->g_ssl);
    tls_ctx->g_ssl = NULL;
    INF("Closed SSL Session");
  }

  if ( tls_ctx->g_ctx != NULL ) {
    SSL_CTX_free(tls_ctx->g_ctx);
      tls_ctx->g_ctx = NULL;
      tls_ctx->g_ctx = NULL;
      INF("Closed SSL Context");
  }

  return 0;
}

