int net_tls_disconnect(connection_tPtr ctx)
{
  tls_channel_tPtr tls_ctx = (tls_channel_tPtr)&(ctx->tls_channel);
  tcp_channel_tPtr tcp_ctx = (tcp_channel_tPtr)&(ctx->tcp_channel);

  if ( tcp_ctx->sock > 0 )  {
      close(tcp_ctx->sock);
      tcp_ctx->sock = 0;
      INF("Closed socket[%d]", tcp_ctx->sock);
  }

  net_tls_release(tls_ctx);

  return 0;
}



int net_tls_connect_ipv4(connection_tPtr ctx, char *host_addr_str, uint16_t port) 
{
  tls_channel_tPtr tls_ctx = (tls_channel_tPtr)&(ctx->tls_channel);
  tcp_channel_tPtr tcp_ctx = (tcp_channel_tPtr)&(ctx->tcp_channel);

  DBG("tcp_ctx->sock=[%d]", tcp_ctx->sock);

  // connect TCP/IP
  int rc = net_tcp_connect_ipv4(ctx, host_addr_str, port);
  if ( rc < 0 ) {
    ERR("fail net_tcp_connect_ipv4()");
    net_tls_disconnect(ctx);
    return -1;
  }


	////////////////////////////////////
    // 소켓을 블로킹 모드로 설정
	set_sock_block_mode(tcp_ctx->sock);

  /* ---------------------------------------------------------- *
   * Try to SSL-connect here, returns 1 for success             *
   * ---------------------------------------------------------- */
  rc = SSL_connect(tls_ctx->g_ssl);
  if ( rc != 1 ){
    /*
	// @Arm ubuntu 18 64 2021-06-28
	///../../../../src/deps/netio/tls_openssl.c_imp:341:103: error: dereferencing pointer to incomplete type ‘SSL {aka struct ssl_st}’
    ERR("Could not build SSL_connect; error=[%s]", (char*)X509_verify_cert_error_string(tls_ctx->g_ssl->error));
	////////
	ERR("Could not build SSL_connect; error=[%s]", X509_verify_cert_error_string(tls_ctx->g_ssl->error));
    */

	ERR("Could not build SSL_connect.");

	int errcode = SSL_get_error(tls_ctx->g_ssl, rc); 
	switch(errcode) 
	 { 
		case SSL_ERROR_NONE: break;        // Cannot happen if err <=0 
		case SSL_ERROR_ZERO_RETURN: ERR("SSL connect returned 0.");break; 
		case SSL_ERROR_WANT_READ: ERR("SSL connect: Read Error.");break; 
		case SSL_ERROR_WANT_WRITE: ERR("SSL connect: Write Error.");break; 
		case SSL_ERROR_WANT_CONNECT: ERR("SSL connect: Error connect."); break; 
		case SSL_ERROR_WANT_ACCEPT: ERR("SSL connect: Error accept."); break; 
		case SSL_ERROR_WANT_X509_LOOKUP: ERR("SSL connect error: X509 lookup."); break; 
		case SSL_ERROR_SYSCALL: ERR("SSL connect: Error in system call."); break; 
		case SSL_ERROR_SSL: ERR("SSL connect: Protocol Error."); break; 
		default: ERR("Failed SSL connect."); 
	 } 

	net_tls_disconnect(ctx);
    return -1;
  }
  else {
    DBG("Successfully enabled SSL/TLS session to [%s:%d]", host_addr_str, port);
  }


  rc = check_peer_certificate(tls_ctx);   
  if ( rc < 0 ) {
    ERR("fail verify_peer_certificate()");
    net_tls_disconnect(ctx);
    return -1;
  }

  tls_ctx->g_connected = (1);

  ctx->netChannelType = TLS;

  DBG("Connected with cipher %s encryption", SSL_get_cipher(tls_ctx->g_ssl));
  return 0;
}



